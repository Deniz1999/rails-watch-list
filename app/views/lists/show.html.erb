<% @list.bookmarks.each do |bookmark| %>
  <%= bookmark.movie.title %>
  <%= image_tag (bookmark.movie.poster_url) %>
  <%= bookmark.comment %>
<% end %>

<%= simple_form_for [ @list, @bookmark] do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie %>
  <%= f.submit "Submit movie", class: "btn btn-primary" %>
<% end %>
